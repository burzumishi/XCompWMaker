[backend]
Type=string
Default=xrender
_Description=Cairo Composite Manager backend (xrender (2D), glitz (OpenGL)) need a restart of cairo-compmgr.

[native_pixmap_bind]
Type=bool
Default=true
_Description=Use pixmap bind associated to backend.

[use_buffered_pixmap]
Type=bool
Default=true
_Description=Use buffered pixmap.

[plugins]
Type=list
ListType=string
Default=perf,stats,snapshot,mosaic,freeze,decoration,window-animation,menu-animation,shadow,fade,opacity,clone
_Description=List of active plugins.

[auto_refresh_rate]
Type=bool
Default=true
_Description=Detect refresh rate.

[refresh_rate]
Type=int
Default=60
_Description=Refresh rate in Hz.

[sync_with_vblank]
Type=bool
Default=false
_Description=Use Sync to VBlank.

[indirect]
Type=bool
Default=false
_Description=Use indirect rendering.

[use_root_background]
Type=bool
Default=true
_Description=Use the default xset root pixmap.

[background]
Type=string
Default=
_Description=Default background pixmap.

[color_background]
Type=string
Default=#000000
_Description=Default background color.

[background_x]
Type=int
Default=0
_Description=Default background pixmap x position (= 0 image is centered).

[background_y]
Type=int
Default=0
_Description=Default background pixmap y position (= 0 image is centered).
