[enable]
Type=bool
Default=false
_Description=Activate/desactivate the magnifier.

[zoom-level]
Type=float
Default=1.5
_Description=The magnifier zoom level determines how much the screen is magnified.

[zoom-quality]
Type=string
Default=good
_Description=The magnifier zoom quality determines zoom filter quality (fast, good, best).

[x]
Type=int
Default=-1
_Description=Magnifier x position negative value center magnifier in the middle of screen.

[y]
Type=int
Default=-1
_Description=Magnifier y position negative value center magnifier in the middle of screen.

[width]
Type=int
Default=80
_Description=Magnifier width in percent of screen width.

[height]
Type=int
Default=80
_Description=Magnifier height in percent of screen height.

[restrict_area_x]
Type=int
Default=-1
_Description=Magnifier restrict area x position negative value get screen x position.

[restrict_area_y]
Type=int
Default=-1
_Description=Magnifier restrict area y position negative value get screen y position.

[restrict_area_width]
Type=int
Default=-1
_Description=Magnifier restrict area width negative value get screen width.

[restrict_area_height]
Type=int
Default=-1
_Description=Magnifier restrict area height negative value get screen height.

[border]
Type=int
Default=20
_Description=Border size before move view.

[shortcut]
Type=string
Default=<Super>F12
_Description=The magnifier shortcut key.

[shade_desktop]
Type=bool
Default=true
_Description=Shade desktop when magnifier is enabled.